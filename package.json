{
	"name": "react_chat_app",
	"version": "1.0.0",
	"description": "A simple web chat app",
	"main": "index.js",
	"scripts": {
		"start:dev": "webpack serve --config webpack.config.dev.js --port 8800",
		"start:wss": "node server/index.js",
		"start": "run-p start:dev start:wss",
		"test": "jest --watch"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/xcixor/chat_app.git"
	},
	"keywords": [
		"chat",
		"react"
	],
	"author": "xcixor",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/xcixor/chat_app/issues"
	},
	"homepage": "https://github.com/xcixor/chat_app#readme",
	"dependencies": {
		"bootstrap": "^5.2.1",
		"react": "^18.2.0",
		"react-bootstrap": "^2.5.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.4.0",
		"ws": "^8.8.1"
	},
	"devDependencies": {
		"@babel/core": "^7.19.1",
		"@babel/eslint-parser": "^7.19.1",
		"@testing-library/react": "^13.4.0",
		"babel-eslint": "^10.1.0",
		"babel-loader": "^8.2.5",
		"babel-preset-react-app": "^10.0.1",
		"css-loader": "^6.7.1",
		"cssnano": "^5.1.13",
		"eslint": "^8.23.1",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-react": "^7.31.8",
		"eslint-webpack-plugin": "^3.2.0",
		"html-webpack-plugin": "^5.5.0",
		"jest": "27.0.6",
		"mini-css-extract-plugin": "^2.6.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.16",
		"postcss-loader": "^7.0.1",
		"react-test-renderer": "^18.2.0",
		"style-loader": "^3.3.1",
		"webpack": "^5.74.0",
		"webpack-bundle-analyzer": "^4.6.1",
		"webpack-cli": "^4.10.0",
		"webpack-dev-server": "^4.11.1"
	},
	"babel": {
		"presets": [
			"babel-preset-react-app"
		]
	},
	"jest": {
		"testEnvironment": "jsdom",
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tools/fileMock.js",
			"\\.(css|less)$": "<rootDir>/tools/styleMock.js"
		}
	},
	"eslintConfig": {
		"extends": [
			"eslint:recommended",
			"plugin:react/recommended",
			"plugin:import/errors",
			"plugin:import/warnings"
		],
		"parserOptions": {
			"parser": "@babel/eslint-parser",
			"ecmaVersion": 2021,
			"sourceType": "module",
			"ecmaFeatures": {
				"jsx": true
			}
		},
		"env": {
			"browser": true,
			"node": true,
			"es6": true,
			"jest": true
		},
		"rules": {
			"no-debugger": "off",
			"no-console": "off",
			"no-unused-vars": "warn",
			"react/prop-types": "warn",
			"no-mixed-spaces-and-tabs": 0
		},
		"settings": {
			"react": {
				"version": "detect"
			}
		},
		"root": true
	}
}
